<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".AddUsername">


    <ImageView
        android:id="@+id/add_username_todo_icon_static"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/todo_intro_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_username_input"
        android:layout_marginBottom="@dimen/vert_large"/>


    <EditText
        android:id="@+id/add_username_input"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="@string/add_username_hint"
        android:textColor="@color/textPrimary"
        android:inputType="textCapWords"
        android:maxLength="20"
        android:singleLine="true"
        android:gravity="center"
        android:background="@drawable/username_input_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/hori_extra_large"
        android:layout_marginEnd="@dimen/hori_extra_large" />


    <TextView
        android:id="@+id/add_username_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vert_large"
        android:background="@drawable/ripple_effect_oval"
        android:clickable="true"
        android:drawableStart="@drawable/icon_done"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="Done"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_username_input" />


</androidx.constraintlayout.widget.ConstraintLayout>