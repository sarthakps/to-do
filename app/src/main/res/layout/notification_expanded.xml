<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notif_expanded_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/hori_small">

    <ImageView
        android:id="@+id/notif_expanded_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_alarm"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10">

        <TextView
            android:id="@+id/notif_expanded_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hori_small"
            android:text="@string/app_name"
            android:textColor="@color/accentPrimary"
            android:textSize="@dimen/text_medium" />

        <TextView
            android:id="@+id/notif_expanded_task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hori_small"
            android:text="@string/placeholderTaskDue"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal"
            android:maxLines="3"/>

        <TextView
            android:id="@+id/notif_expanded_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/hori_small"
            android:text="@string/placeholderListName"
            android:textColor="@color/greyish_blue"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/notif_expanded_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="12:00 AM"
        android:textColor="@color/slate_gray"
        android:textSize="@dimen/text_small"
        android:gravity="end"/>


</LinearLayout>